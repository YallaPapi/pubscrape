# Bing Scraper Environment Configuration
# Copy this file to .env and fill in your values

# Proxy Configuration (optional)
PROXY_ENABLED=false
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=
PROXY_TYPE=http  # http, https, socks4, socks5

# Residential Proxy Pool (optional)
RESIDENTIAL_PROXY_ENDPOINT=
RESIDENTIAL_PROXY_USERNAME=
RESIDENTIAL_PROXY_PASSWORD=

# Rate Limiting Configuration
MAX_REQUESTS_PER_MINUTE=15
MAX_CONCURRENT_SESSIONS=2
BASE_DELAY_SECONDS=3
MAX_RETRY_ATTEMPTS=3

# Anti-Detection Settings
USER_AGENT_ROTATION=true
BLOCK_IMAGES=true
BLOCK_CSS=true
BLOCK_JS=false
HEADLESS_MODE=true

# Output Configuration
OUTPUT_DIRECTORY=output
LOGS_DIRECTORY=logs
CSV_FILENAME_PREFIX=bing_scraper_results

# Search Configuration
MAX_PAGES_PER_QUERY=5
MAX_WEBSITES_TO_VISIT=100
CONTACT_PAGE_KEYWORDS=contact,about,team,staff

# Email Validation
MIN_EMAIL_CONFIDENCE_SCORE=0.5
EXCLUDE_DOMAINS=example.com,test.com,gmail.com,yahoo.com,hotmail.com

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_MONITORING=true
SAVE_FAILED_REQUESTS=true

# Development Settings
DEBUG_MODE=false
SAVE_HTML_SNAPSHOTS=false
SCREENSHOT_ON_ERROR=false