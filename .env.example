# VRSEN Lead Generation System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=sqlite:///./vrsen_leads.db

# API Keys
MAILTESTER_API_KEY=your_mailtester_ninja_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Lead Generation Settings
DEFAULT_MAX_LEADS_PER_QUERY=25
DEFAULT_REQUEST_DELAY=2.5
DEFAULT_TIMEOUT_SECONDS=20
ENABLE_EMAIL_VALIDATION=true
ENABLE_DNS_CHECKING=false
MIN_EMAIL_CONFIDENCE=0.6
MIN_BUSINESS_SCORE=0.5

# Scraping Configuration
USE_ROTATING_USER_AGENTS=true
USE_RESIDENTIAL_PROXIES=false
HEADLESS_MODE=true
MAX_CONCURRENT_EXTRACTIONS=3

# File Storage
CAMPAIGN_OUTPUT_DIR=campaign_output
EXPORT_DIR=exports
TEMP_DIR=temp

# Security (for production)
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30