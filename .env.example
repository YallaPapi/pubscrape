# VRSEN PubScrape Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
VRSEN_ENV=development
DEBUG_MODE=false

# =============================================================================
# API KEYS AND CREDENTIALS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

BING_API_KEY=your_bing_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CX=your_google_custom_search_engine_id_here
HUNTER_API_KEY=your_hunter_io_api_key_here
MAILTESTER_API_KEY=your_mailtester_ninja_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================
MAX_PAGES_PER_QUERY=5
RATE_LIMIT_RPM=12
MAX_CONCURRENT_SEARCHES=2
SEARCH_TIMEOUT=30
RESULTS_PER_PAGE=10

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================
MAX_CRAWL_DEPTH=2
MAX_PAGES_PER_SITE=10
CRAWL_DELAY=1.0
CONCURRENT_CRAWLERS=3
RESPECT_ROBOTS_TXT=true

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
BATCH_SIZE=100
MAX_WORKERS=4
DEDUPLICATION_ENABLED=true
VALIDATION_ENABLED=true
EMAIL_VALIDATION_LEVEL=strict
QUALITY_THRESHOLD=0.7

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================
OUTPUT_DIR=output
DATA_DIR=data
CACHE_DIR=cache
TEMP_DIR=temp
CSV_DELIMITER=,
CSV_ENCODING=utf-8
INCLUDE_METADATA=true
COMPRESS_OUTPUT=false
MAX_FILE_SIZE_MB=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_DIR=logs
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_JSON_LOGGING=false
MAX_LOG_SIZE_MB=50
LOG_BACKUP_COUNT=5

# =============================================================================
# DATABASE CONFIGURATION (For Docker deployment)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=pubscrape
POSTGRES_USER=pubscrape
POSTGRES_PASSWORD=your_postgres_password_here
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY AND PERFORMANCE
# =============================================================================
SSL_VERIFICATION=true
MAX_REDIRECTS=5
ALLOWED_DOMAINS=
BLOCKED_DOMAINS=
IP_ROTATION=true
CAPTCHA_SOLVING=false
ENABLE_CACHING=true
CACHE_SIZE_MB=500
COMPRESSION_ENABLED=true
PARALLEL_PROCESSING=true
MEMORY_LIMIT_MB=2048

# =============================================================================
# RESUME AND RECOVERY
# =============================================================================
ENABLE_RESUME=true
AUTO_SAVE_INTERVAL=300
MAX_SESSION_AGE_DAYS=7

# =============================================================================
# ANTI-DETECTION CONFIGURATION
# =============================================================================
STEALTH_MODE=true
USER_AGENT_ROTATION=true
JAVASCRIPT_ENABLED=true
IGNORE_SSL_ERRORS=true
RANDOM_DELAYS=true
HEADLESS_BROWSER=true
BROWSER_WINDOW_WIDTH=1920
BROWSER_WINDOW_HEIGHT=1080

# =============================================================================
# MONITORING (Docker deployment)
# =============================================================================
ENABLE_METRICS=true
PROFILE_PERFORMANCE=false
GRAFANA_PASSWORD=admin
PGADMIN_EMAIL=admin@vrsen.com
PGADMIN_PASSWORD=admin

# =============================================================================
# LEGACY SETTINGS (for backward compatibility)
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true
DATABASE_URL=sqlite:///./vrsen_leads.db
DEFAULT_MAX_LEADS_PER_QUERY=25
DEFAULT_REQUEST_DELAY=2.5
DEFAULT_TIMEOUT_SECONDS=20
ENABLE_EMAIL_VALIDATION=true
ENABLE_DNS_CHECKING=false
MIN_EMAIL_CONFIDENCE=0.6
MIN_BUSINESS_SCORE=0.5
USE_ROTATING_USER_AGENTS=true
USE_RESIDENTIAL_PROXIES=false
MAX_CONCURRENT_EXTRACTIONS=3
CAMPAIGN_OUTPUT_DIR=campaign_output
EXPORT_DIR=exports
SECRET_KEY=your_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30